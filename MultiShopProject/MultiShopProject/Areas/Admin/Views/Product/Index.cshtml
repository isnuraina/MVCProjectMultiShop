@model List<Product>
@{
    ViewData["Title"] = "Product Index Page";
}

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>Admin Dashboard</h2>
            <a asp-action="Create">
                <button class="btn btn-primary">Create Category + </button>
            </a>
        </div>
    </div>

    <div class="row">


        <div class="panel panel-default">

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product Id</th>
                                <th>Category Name</th>
                                <th>Product Name</th>
                                <th>Product Title</th>
                                <th>Product Price</th>
                                <th>Product Old Price</th>
                                <th>Product Image</th>
                                <th>Product Detail</th>
                                <th>Product Delete</th>
                                <th>Product Update</th>
                                <th>Category Id</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Price</td>
                                    <td>@item.OldPrice</td>
                                    <td>
                                        <img src="~/img/@item.ImageURL" width="150px"  />
                                    </td>
                                    <td>
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
                                            <button class="btn btn-primary">Detail</button>
                                        </a>
                                    </td>

                                    <td>

                                        <a onclick="removeEntity(@item.Id,'@item.Name')">
                                            <button class="btn btn-danger">Delete</button>

                                        </a>


                                    </td>
                                    <td>
                                        <a asp-controller="category" asp-action="edit" asp-route-id="@item.Id">
                                            <button class="btn btn-success">Edit</button>
                                        </a>
                                    </td>
                                    <td>@item.CategoryId</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
    </div>


@section addjs {
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/admin/assets/pages/dashboard/custom-dashboard.js"></script>

    <script>
         function removeEntity(id,name){
                     swal({
          title: "Diqqet",
          text: `${name} bu qeydi silmek istediyinizden eminsiniz?`,
          icon: "warning",
          buttons: true,
          dangerMode: true,
          buttons:['Xeyr','Beli']
        })
        .then((willDelete) => {
          if (willDelete) {
              let obj={id};
              $.ajax({
                  url:`@Url.Action("Delete")`,
                  type:'POST',
                  data:obj,
                  success:function(response){
                      if(response.error==true){
                          toastr.error(response.message,"Error!");
                          return;
                      }
                      toastr.success(response.message,"Success!");
                      setTimeout(function(){
                          window.location.reload();
                      },2e3)
                  },
                   error:function(response){
                    console.warn(response)
                  }
              })
          }
        });
         }
    </script>
 }


